{
	"manifest_version": 3,
	"name": "PokeBin-Extension",
	"version": "1.0",
	"description": "Enable imports / exports from PokeBin",
	"icons": {
		"48": "icons/spheal.png"
	},
	"content_scripts": [
		{
			"matches": [
				"*://play.pokemonshowdown.com/teambuilder",
				"*://pokebin.com/*/json"
			],
			"js": ["main.js"]
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["activeTab", "scripting", "tabs"]
}
